{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2020"],
    "declaration": false,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "types": ["./types"],
      "constant": ["./constant"],
      "*": ["lib/*"]
    },
    "typeRoots": [
      "./@types",
      "./node_modules/@types"
    ],
    "types": [
      "node",
      "jest"
    ],
    "allowSyntheticDefaultImports": true,
    "preserveSymlinks": false,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "./src",
    "./test",
    "./types",
    "./constant",
    "src/index.ts"
  ],
  "exclude": [
    "./dist/",
    "./node_modules/"
  ]
}
