{
  "name": "cdk",
  "version": "0.1.0",
  "private": true,
  "description": "AWS CDK Infrastructure for English Card Battle",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "diff:dev": "cdk diff --context environment=dev",
    "diff:stg": "cdk diff --context environment=stg",
    "diff:prd": "cdk diff --context environment=prd",
    "deploy:dev": "cdk deploy --context environment=dev --all",
    "deploy:stg": "cdk deploy --context environment=stg --all",
    "deploy:prd": "cdk deploy --context environment=prd --all",
    "synth": "cdk synth",
    "destroy:dev": "cdk destroy --context environment=dev --all",
    "destroy:stg": "cdk destroy --context environment=stg --all"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.993.0",
    "aws-cdk-lib": "^2.100.0",
    "constructs": "^10.0.0",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "aws-cdk": "^2.100.0",
    "cdk-nag": "^2.37.55",
    "eslint": "^9.39.1",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.0",
    "typescript-eslint": "^8.46.4"
  }
}
